# Example secrets file - DO NOT commit actual secrets to version control
# Copy this file to secrets.yaml and fill in actual values

apiVersion: v1
kind: Secret
metadata:
  name: checkpoint-credentials
  namespace: blue-team
  labels:
    app: checkpoint-quantum-agent
    component: blue-team-agent
type: Opaque
data:
  # Base64 encoded values - use: echo -n "your-value" | base64
  username: <base64-encoded-username>
  password: <base64-encoded-password>
---
apiVersion: v1
kind: Secret
metadata:
  name: openai-credentials
  namespace: blue-team
  labels:
    app: checkpoint-quantum-agent
    component: blue-team-agent
type: Opaque
data:
  # Base64 encoded OpenAI API key
  api-key: <base64-encoded-openai-api-key>
---
apiVersion: v1
kind: ServiceAccount
metadata:
  name: checkpoint-quantum-agent
  namespace: blue-team
  labels:
    app: checkpoint-quantum-agent
    component: blue-team-agent
---
apiVersion: rbac.authorization.k8s.io/v1
kind: Role
metadata:
  namespace: blue-team
  name: checkpoint-quantum-agent-role
rules:
- apiGroups: [""]
  resources: ["pods", "services", "configmaps", "secrets"]
  verbs: ["get", "list", "watch"]
- apiGroups: ["apps"]
  resources: ["deployments", "replicasets"]
  verbs: ["get", "list", "watch"]
---
apiVersion: rbac.authorization.k8s.io/v1
kind: RoleBinding
metadata:
  name: checkpoint-quantum-agent-rolebinding
  namespace: blue-team
subjects:
- kind: ServiceAccount
  name: checkpoint-quantum-agent
  namespace: blue-team
roleRef:
  kind: Role
  name: checkpoint-quantum-agent-role
  apiGroup: rbac.authorization.k8s.io

